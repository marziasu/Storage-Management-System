<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SignUp</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
     <!-- Display the error message if it exists -->
    <% if (typeof error !== 'undefined' && error) { %>
        <div style="color: red; background-color: #f8d7da; padding: 10px; border-radius: 5px;">
            <%= error %> <!-- This is the error message from the backend -->
        </div>
    <% } %>

    <!--SignUp form-->
    <div class"form-container">
        <h2>Create Your Account</h2>
        <form action="/signup" method="post">
            <div class="form-group">
                <label for="username"></label>
                <input type="text" id="username" name="username" placeholder="User Name" required >
           </div>
            <div class="form-group">
                 <label for="email"></label>
                 <input type="email" id="email" name="email" placeholder="Email" required >
            </div>
            <div class="form-group">
                <label for="password"></label>
                <input type="password" id="password" name="password" placeholder="Password" required>
                <i class="fa-regular fa-eye" id="show-password"></i>
           </div>
            <div class="form-group">
                <label for="confirmpassword"></label>
                <input type="password" id="confirmpassword" name="confirmpassword" placeholder="Confirm Password" required>
                <i class="fa-regular fa-eye" id="show-confirmpassword"></i>
            </div>
            <div>
                <input type="checkbox" id="terms&conditions" name="terms&conditions" value="terms&conditions">
                <label for="terms&conditions"> I have read & agreed to jotter terms & conditions</label><br>
            </div>
           <button type="submit" class="submit-btn">Sign Up</button>
        </form>
        <p style="color:grey">Already have an account ? <a href="/login" class="link"><strong>Log In</strong></a></p>

    </div>
    <script>
        // Show password functionality
        const showpassword = document.querySelector("#show-password");
        const passwordField = document.querySelector("#password");

        showpassword.addEventListener("click", function() {
            this.classList.toggle("fa-eye-slash"); // `this` now refers to the clicked icon
            const type = passwordField.getAttribute("type") === "password" ? "text" : "password";
            passwordField.setAttribute("type", type);
        });
        // Show confirm password functionality
        const showcpassword = document.querySelector("#show-confirmpassword");
        const cpasswordField = document.querySelector("#confirmpassword");

        showcpassword.addEventListener("click", function() {
            this.classList.toggle("fa-eye-slash"); // `this` now refers to the clicked icon
            const type = cpasswordField.getAttribute("type") === "password" ? "text" : "password";
            cpasswordField.setAttribute("type", type);
        });
    </script>
</body>
</html>